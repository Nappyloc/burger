<div class="container">
    <div class="row">
        <div class="col-12 tect-center">
            <h1>Eat Da Burger!</h1>

        </div>
        <div class="col-6 text-center">
            <div class="row">
                {{#each burgers_info}}
                {{#unless this.devoured}}
                <div class="col-9 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>
                <div class="col-3 text center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value="{{this.id}}">
                        <button type="submit" class="btn btn-default"> Eat Burger!</button>
                    </form>

                </div>
                {{/unless}}
                {{/each}}

            </div>

        </div>

    </div>

</div>