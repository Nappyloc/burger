<div class="container">
    <div class="row">
        <div class="col-12 tect-center">
            <h1>Eat Da Burger!</h1>

        </div>
        <div class="col-6 text-center">
            <div class="row uneaten">
                {{#each burgers_info}}
                {{#unless this.devoured}}
                <div class="col-9 text-center">
                    <pre>{{this.id}}. {{this.burger_name}} <button type="submit" class="btn btn-default" id="eat" data-id="{{this.id}}"> Eat Burger!</button></pre>
                </div>
                {{/unless}}
                {{/each}}

            </div>

        </div>
        <div class="col-6 text-center">
            {{#each burgers_info}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>

    </div>
    <div class="row" id="addburger">
        <div class="col-9 text-center">
            <form class="create">
                <div class="form-group">
                    <label for="burgerName">Burger Name: </label>
                    <input type="text" id="burgerName" name="burger">
                </div>
                <button type="submit" id="submit">Submit</button>

            </form>

        </div>

    </div>

</div>